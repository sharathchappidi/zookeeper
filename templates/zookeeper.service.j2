[Unit]
Description=ZooKeeper Service
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
#User=zookeeper
#Group=zookeeper
ExecStart=/srv/zookeeper/3.4.10/zookeeper-3.4.10/bin/zkServer.sh start /etc/zookeeper/zoo.properties
ExecStop=/srv/zookeeper/3.4.10/zookeeper-3.4.10/bin/zkServer.sh stop /etc/zookeeper/zoo.properties
ExecReload=/srv/zookeeper/3.4.10/zookeeper-3.4.10/bin/zkServer.sh restart /etc/zookeeper/zoo.properties
WorkingDirectory=/var/lib/zookeeper

[Install]
WantedBy=default.target
